                            <div class="mb-2">
                                <input type="text" name="user_contact" placeholder="User Contact" class="form-control">
                            </div>
                            <div class="mb-2">
                                <input type="text" name="user_email" placeholder="User Email" class="form-control">
                            </div>
                            <div class="mb-2">
                                <input type="text" name="user_gender" placeholder="User Gender" class="form-control">
